@using Lexicom.Concentrate.Blazor.WebAssembly.Amenities.Services

@inject IQuickLinkService _linkService
@inject IBrowserService _browserService

@if (!string.IsNullOrWhiteSpace(Text) || !string.IsNullOrWhiteSpace(Identifier))
{
    <a class="quicklink" @onclick="ClickAsync">
        @Text
    </a>
}
else
{
    @Text
}

@code
{
    [Parameter]
    public string? Identifier { get; set; }

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private async Task ClickAsync()
    {
        string? identifier = null;
        if (!string.IsNullOrWhiteSpace(Identifier))
        {
            identifier = Identifier;
        }
        else if (!string.IsNullOrWhiteSpace(Text))
        {
            identifier = Text;
        }

        if (identifier is not null)
        {
            string? url = await _linkService.GetUrlFromIdentifierAsync(identifier);
            if (url is not null)
            {
                await _browserService.OpenNewTabAsync(url);
            }
        }
    }
}
